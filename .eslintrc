{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "xo",
        "plugin:react/recommended"
    ],
    "overrides": [
        {
            "extends": [
                "xo-typescript"
            ],
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {
                "@typescript-eslint/semi": ["error", "never"],
                "@typescript-eslint/object-curly-spacing": ["error", "always"]
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "never"],
        "object-curly-spacing": ["error", "always"],
        "curly": ["error", "multi"]
    }
}
